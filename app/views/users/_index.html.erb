<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <th colspan="9">
      <% users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user_path(user), class: "user_{user.id}" %></td>
        </tr>
      <% end %>
    </th>
  </tbody>
</table>
